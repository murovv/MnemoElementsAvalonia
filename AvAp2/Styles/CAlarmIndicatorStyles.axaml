<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:models="clr-namespace:AvAp2.Models"
        x:DataType="models:BlinkAnimationControllerManager">
    <Design.PreviewWith>
        <Border Padding="20">
            <!-- Add Controls for Previewer Here -->
        </Border>
    </Design.PreviewWith>
    <Style Selector="models|BlinkAnimationController">
        <Style.Animations>
            <Animation Duration="0:0:0.5" IterationCount="INFINITE" PlaybackDirection="Alternate">
                <KeyFrame Cue="0%">
                    <Setter Property="Opacity" Value="0"></Setter>
                </KeyFrame>
                <KeyFrame Cue="100%">
                    <Setter Property="Opacity" Value="1"></Setter>
                </KeyFrame>
            </Animation>
        </Style.Animations>
    </Style>
</Styles>
